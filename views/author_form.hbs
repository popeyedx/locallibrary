<h1>{{title}}</h1>

<form action="#" method="POST">
  <div class="form-group">
    <label for="first_name">First Name:</label>
    <input id="first_name" class="form-control" type="text" placeholder="First name (Christian) last" name="first_name" value="{{author.first_name}}">
    <label for="family_name">Family Name:</label>
    <input id="family_name" class="form-control" type="text" placeholder="Family name (surname)" name="family_name" value="{{author.family_name}}">
  </div>
  <div class="form-group">
    <label for="date_of_birth">Date of birth:</label>
    <input id="date_of_birth" class="form-control" type="date" name="date_of_birth" value="{{author.date_of_birth}}">
    <label for="date_of_death">Date of death:</label>
    <input id="date_of_death" class="form-control" type="date" name="date_of_death" value="{{author.date_of_death}}">
    <button class="btn btn-primary" type="submit">Submit</button>
  </div>
</form>

{{#each errors}}
  <ul>
    <li>{{msg}}</li>
  </ul>
{{/each}}