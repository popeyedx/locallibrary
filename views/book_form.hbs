<h1>{{title}}</h1>

<form action="" method="POST">
  <div class="form-group">
    <label for="title">Title:</label>
    <input id="title" class="form-control" type="text" placeholder="Name of book" name="title" value="{{book.title}}" required="true">
  </div>
  <div class="form-group">
    <label for="author">Author:</label>
    <select id="author" class="form-control" type="select" placeholder="Select author" name="author" required="true">
      {{#each authors}}
        {{#if checked}}
          <option value="{{id}}" selected>{{name}}</option>
        {{else}}
          <option value="{{id}}">{{name}}</option>
        {{/if}}
      {{else}}
      {{/each}}
    </select>
  </div>
  <div class="form-group">
    <label for="summary">Summary:</label>
    <textarea id="summary" class="form-control" type="textarea" placeholder="Summary" name="summary" rows="3" required="true">{{book.summary}}</textarea>
  </div>
  <div class="form-group">
    <label for="isbn">ISBN:</label>
    <input id="isbn" class="form-group" type="text" placeholder="ISBN13" name="isbn" required="true" value="{{book.isbn}}">
  </div>
  <div class="form-group">
    <label for="genre">Genre:</label>
    <div>
      {{#each genres}}
        <div style="display:inline; padding-right:10px;">
          <input class="checkbox-input" type="checkbox" name="genre" id="{{id}}" value="{{id}}">
          <label for="{{id}}">{{name}}</label>
        </div>
      {{else}}
      {{/each}}
    </div>
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>


<ul>
{{#each errors}}  
    <li>{{msg}}</li>
{{else}}
{{/each}}
</ul>
